<h1>Edit Event</h1>

<%= form_with model: @event, local: true do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>

  <div>
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>

  <div>
    <%= f.label :private, "Private Event?" %><br>
    <%= f.check_box :private %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <% if User.count > 1 %>
    <div>
      <%= f.label "Invite Users" %><br>
      <%= f.collection_select :invited_user_ids, User.where.not(id: current_user.id), :id, :email, { selected: @event.invited_user_ids }, { multiple: true } %>
    </div>
  <% end %>

  <div>
    <%= f.submit "Update Event" %>
  </div>
<% end %>

<%= link_to 'Back to Event', event_path(@event) %>
